{
    "name": "arielespinoza07/result-pattern",
    "description": "A modern implementation of the Result pattern for handling operation outcomes and HTTP responses",
    "keywords": ["php", "result-pattern", "outcome"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ariel Espinoza",
            "email": "arielespinoza46@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "pestphp/pest": "^v3.8.2",
        "phpstan/phpstan": "^2.1.22",
        "rector/rector": "^2.1.2",
        "laravel/pint": "^1.24.0",
        "peckphp/peck": "^0.1.3",
        "mockery/mockery": "^1.6.12",
        "phpstan/phpstan-mockery": "^2.0.0",
        "pestphp/pest-plugin-type-coverage": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "ArielEspinoza07\\ResultPattern\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": [
            "rector",
            "pint"
        ],
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:typos": "peck",
        "test:lint": [
            "pint --test"
        ],
        "test:unit": "pest --parallel --coverage --min=90",
        "test:unit:parallel": "pest --parallel",
        "test:types": "phpstan",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:typos",
            "@test:unit",
            "@test:types",
            "@rector:check"
        ],
        "analyse": "phpstan analyse",
        "pint": "pint",
        "rector:check": "rector process --dry-run",
        "rector:fix": "rector process"
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
